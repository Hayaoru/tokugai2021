</head>
  <body>
    <header>
      <div class="heading">
        <%= link_to image_tag("rogo.png", class: :logo), root_path %>
        
      </div>
      <div class="navbar">
        <ul class="nav-lists">
          <li>カテゴリからさがす</li>
          <li>キーワードからさがす</li>

          <li class="login">ログイン・新規登録</li>
      
        </ul>
      </div>
    </header>

<h2 class="heading-name">新規登録</h2>
<div class="log-content">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="s-field">
    <label class="form-text">ニックネーム</label>
    <%= f.text_field :nickname, class:"input-default", autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="s-field">
    <label class="form-text">メールアドレス</label>
    <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="s-field">
    <label class="form-text">パスワード</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 桁以上)</em>
    <% end %><br />
    <%= f.password_field :password, class:"input-default",autocomplete: "new-password" %>
  </div>

  <div class="s-field">
    <label class="form-text">パスワード（確認用）</label>
    <%= f.password_field :password_confirmation, class:"input-default",autocomplete: "new-password" %>
  </div>
</div>
  <div class="actions">
    <%= f.submit "新規登録" ,class:"b-send"%>
  </div>
<% end %>

